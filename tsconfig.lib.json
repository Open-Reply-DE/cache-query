{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src/core/**/*"],
  "exclude": ["./src/app*", "./src/test-server", "./src/testing", "./src/**/*.spec.ts"]
}
